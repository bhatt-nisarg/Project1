<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingFragment"
    android:id="@+id/settinglayout">
<LinearLayout
    android:id="@+id/heading"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="left"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@color/pink"
    android:paddingTop="5dp"
    >
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.1"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_weight="0.8"/>

    <TextView
        android:id="@+id/logout"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/white"
        android:layout_weight="0.1"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_below="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/linearsetting"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Info"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="0.6"
            />
            <TextView
                android:layout_weight="0.3"
                android:id="@+id/edt_profile"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/editprofile_bg"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/edit_email"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dis_profile"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="0.2"/>

            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:text="@string/hello"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/dis_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:layout_marginTop="5dp"
                    android:text="@string/your_phone"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/dis_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:layout_marginTop="5dp"
                    android:text="@string/your_email"
                    android:textSize="15sp"
                    />
             </LinearLayout>
    </LinearLayout>

</LinearLayout>



</RelativeLayout>