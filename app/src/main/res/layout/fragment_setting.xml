<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/linearsetting"
        android:orientation="vertical"
        android:background="@color/pink"
        android:paddingStart="25dp"

        >

        <ImageView
            android:id="@+id/dis_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/userimage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/hello"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/dis_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:text="@string/your_email"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/dis_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:text="@string/your_phone"
            android:textSize="20sp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearsetting"
        android:layout_marginTop="-17dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edt_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/up_corner"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            android:text="@string/edit_email"
            android:textColor="#232323" />



        <ImageButton
            android:id="@+id/logout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonbg"
            android:src="@drawable/logoutlogo" />
    </LinearLayout>


</RelativeLayout>